@model IEnumerable<WebBanSach.Models.GioHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

@{ 
    int tongTien = 0;
}

<section id="cart-view">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="cart-view-area">
                    <div class="cart-view-table">
                        <form action="">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th></th>
                                            <th>Product</th>
                                            <th>Price</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td><a class="remove" href="/GioHang/XoaKhoiGio_KhiTrongGio?TaiKhoan=@item.TenTK&MaSach=@item.MaSach"><fa class="fa fa-close"></fa></a></td>
                                                <td><a href="#"><img src="@item.Sach.BiaSach" width="250px" height="300px" alt="img"></a></td>
                                                <td><a class="aa-cart-title" href="#">@item.Sach.TenSach</a></td>
                                                <td>@item.Sach.Gia.000d</td>
                                            </tr>
                                            tongTien += @item.Sach.Gia ?? 0;
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </form>
                        <!-- Cart Total view -->
                        <div class="cart-view-total">
                            <h4>Cart Totals</h4>
                            <table class="aa-totals-table">
                                <tbody>
                                    <tr>
                                        <th>Total</th>
                                        <td>@tongTien.000d</td>
                                    </tr>
                                </tbody>
                            </table>
                            <a onclick="myFunction()" class="aa-cart-view-btn">Proced to Checkout</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    function myFunction() {
        alert("Bạn đã đặt hàng thành công");
    }
</script>